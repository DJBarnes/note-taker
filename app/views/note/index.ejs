<!doctype html>
<html lang="en">
  <%- include('../partials/head'); %>
  <body>
    <div class="container">
      <%- include('../partials/errors', {errors: errors}); %>
      <%- include('../partials/messages', {messages: messages}); %>
      <h1>Note Taker</h1>
      <hr>
      <a href="create" class="btn btn-primary float-right">Add Note</a>
      <% if (notes.length > 0) { %>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Subject</th>
            </tr>
          </thead>
          <tbody>
            <% notes.forEach(function(note) { %>
              <tr>
                <td scope="row">
                  <%=note.subject %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <h3>There are currently no Notes to display!</h3>
      <% } %>
    </div>
    <%- include('../partials/scripts'); %>
  </body>
</html>